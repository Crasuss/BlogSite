<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>MVC Blog</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/Kaynaklar/startbootstrap-blog-home-gh-pages/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="~/Content/Kaynaklar/startbootstrap-blog-home-gh-pages/css/blog-home.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index/">Blog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/Index/">
                            AnaSayfa
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/Hakkımızda/">Hakkımızda</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" href="~/Home/İletisim/">İletisim</a>
                    </li>



                    @if (Session["uyeid"] != null)
                    {
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link" href="/Uye/Index/@Session["uyeid"]">@Session["kullanıcıadi"].ToString()</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Uye/Logout/">Çıkış</a>
                        </li>

                

                        if (Convert.ToInt32(Session["yetkiid"]) == 1)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="~/Admin/Index/" target="_blank" >Admin Paneli</a>
                            </li>
                        }
                    }

                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Uye/Login/">Giriş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Uye/Create/">Kayıt Ol</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->
            <div class="col-md-8">
                @RenderBody()
            </div>
            <!-- Blog Post -->
            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">
                @Html.Partial("BlogAramaPartial")
                <!-- Categories Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Categories</h5>
                    <div class="card-body">
                        @{
                            Html.RenderAction("KategoriPartial", "Home");
                        }
                    </div>
                </div>
                <div class="well">
                    @{
                        Html.RenderAction("PopulerMakaleler", "Home");
                    }
                </div>
                <div class="well">
                    @{
                        Html.RenderAction("SonYorumlar", "Home");
                    }
                </div>
            </div>
           
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; @DateTime.Now </p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/Kaynaklar/startbootstrap-blog-home-gh-pages/vendor/jquery/jquery.js""></script>
    <script src="~/Content/Kaynaklar/startbootstrap-blog-home-gh-pages/vendor/jquery/jquery.min.js"></script>
</body>
</html>
