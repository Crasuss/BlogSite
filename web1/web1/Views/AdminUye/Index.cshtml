@model IEnumerable<web1.Models.Uye>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Uyeler</h2>

<p>
    @Html.ActionLink("Yeni Üye", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Yetki.Yetki1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KullanıcıAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sifre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Yetki.Yetki1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KullanıcıAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sifre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdSoyad)
        </td>
        <td>
           <img  src="@item.Foto"   width="20" class="img-circle img-responsive " alt=""  />
        </td>
        <td>
           
            @Html.ActionLink("Detay", "Details", new { id=item.Uyeid }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.Uyeid })
        </td>
    </tr>
}

</table>
